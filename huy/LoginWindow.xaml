<Window x:Class="huy.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:huy.ViewModels"
        Title="FU Mini Hotel System - Login"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <viewmodels:LoginViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Primary Rounded Button: Blue -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary (Cancel) Button: Light Blue -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#64B5F6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#42A5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox & PasswordBox style stays white-on-transparent -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Blue Gradient -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1976D2" Offset="0"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.1"/>
                </Grid.Background>
                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="Welcome to" Foreground="White"
                               FontSize="24" FontWeight="Light"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="FU Mini Hotel System" Foreground="White"
                               FontSize="32" FontWeight="Bold"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Your premium hotel management solution"
                               Foreground="White" FontSize="16"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Side - Darker Blue Gradient -->
        <Border Grid.Column="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel VerticalAlignment="Center" Margin="50,0">
                    <TextBlock Text="LOGIN" Foreground="White"
                               FontSize="28" FontWeight="Bold"
                               Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>

                    <!-- Email -->
                    <TextBlock Text="Email" Foreground="#aaa"
                               FontSize="12" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtEmail"
                             Style="{StaticResource TextBoxStyle}"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Password -->
                    <TextBlock Text="Password" Foreground="#aaa"
                               FontSize="12" Margin="0,20,0,0"/>
                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource PasswordBoxStyle}"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#f44336"
                               TextWrapping="Wrap"
                               Margin="0,20,0,20"/>

                    <!-- LOG IN Button -->
                    <Button Content="LOG IN"
                            Style="{StaticResource RoundedButtonStyle}"
                            Margin="0,10,0,10" Width="200"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=txtPassword, Path=Password}"/>

                    <!-- CANCEL Button -->
                    <Button Content="CANCEL"
                            Style="{StaticResource CancelButtonStyle}"
                            Margin="0,10,0,0" Width="200"
                            Command="{Binding CancelCommand}"/>

                    <TextBlock Text="Â© 2025 FU Mini Hotel System"
                               Foreground="#aaa" FontSize="10"
                               Margin="0,40,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
